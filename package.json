{
  "name": "holape-angular",
  "version": "1.3.0",
  "description": "MWS Desktop - Monitor WhatsApp Service",
  "main": "dist/electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron:build": "tsc -p tsconfig.electron.json",
    "electron:dev": "npm run build && npm run electron:build && electron .",
    "electron:prod": "npm run build:prod && npm run electron:build && electron .",
    "electron:start": "npm run electron:build && electron .",
    "electron": "npm run electron:dev",
    "dist": "npm run electron:build && electron-builder",
    "generate:installer-assets": "node scripts/generate-installer-bitmaps.js",
    "dist:win": "npm run generate:installer-assets && npm run electron:build && electron-builder --win",
    "pack": "npm run electron:build && electron-builder --dir"
  },
  "build": {
    "appId": "com.contactototal.mws-desktop",
    "productName": "MWS Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MWS Desktop",
      "runAfterFinish": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerSidebar": "build/installerSidebar.bmp",
      "uninstallerSidebar": "build/uninstallerSidebar.bmp",
      "installerHeader": "build/installerHeader.bmp"
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@phosphor-icons/web": "^2.1.2",
    "@stomp/stompjs": "^7.2.1",
    "rxjs": "~7.8.0",
    "sockjs-client": "^1.6.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.6",
    "@angular/cli": "^20.1.6",
    "@angular/compiler-cli": "^20.1.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.10.0",
    "@types/sockjs-client": "^1.5.4",
    "autoprefixer": "^10.4.23",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.8.2"
  }
}
